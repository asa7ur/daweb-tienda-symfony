{% extends 'base.html.twig' %}

{% block title %}Mi Historial{% endblock %}

{% block contenido %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col border-bottom pb-2">
            <h2 class="text-primary">
                <i class="fa fa-history"></i> Mis Pedidos Realizados
            </h2>
        </div>
    </div>

    {% if pedidos is empty %}
        <div class="alert alert-info shadow-sm border-0">
            <i class="fa fa-info-circle"></i> Todavía no has realizado ninguna compra.
            <a href="{{ path('categorias') }}" class="alert-link ms-2">Ver productos</a>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow-sm border-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-primary text-white">
                                <tr>
                                    <th class="ps-3">ID</th>
                                    <th>Fecha</th>
                                    <th>Referencia</th>
                                    <th class="text-end pe-3">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for pedido in pedidos %}
                                    <tr>
                                        <td class="ps-3 fw-bold text-muted">#{{ pedido.id }}</td>
                                        <td>{{ pedido.fecha|date('d/m/Y') }}</td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                {{ pedido.code ?? 'S/N' }}
                                            </span>
                                        </td>
                                        <td class="fw-bold text-dark text-end pe-3">
                                            {{ pedido.coste }} €
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="my-4">
        <a href="{{ path('categorias') }}" class="btn btn-link text-decoration-none">
            <i class="fa fa-arrow-left"></i> Volver a la tienda
        </a>
    </div>
</div>
{% endblock %}
{# templates/correo.html.twig #}

<h1>¡Gracias por su compra {{ app.user.login }}!</h1>
<h2>Identificador de su pedido: #{{ pedido_id }}</h2>

<h2>Resumen de su compra: </h2>

<table>
    <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Precio y unidades</th>
        <th>Precio total</th>
    </tr>
    {% for item in productos %}
        <tr>
            <td>{{ item.codigo }}</td>
            <td>{{ item.nombre }}</td>
            <td>{{ item.descripcion }}</td>
            <td>{{ item.precio }}€ x{{ item.unidades }}</td>
            <td>{{ (item.precio * item.unidades)|number_format(2) }}€</td>
        </tr>
    {% endfor %}
</table>

<p>Precio total: {{ coste }}€</p>

{% extends 'base.html.twig' %}

{% block title %}Cesta de la compra{% endblock %}

{% block contenido %}
<div class="container">
    <h1 class="mb-4 text-center">Tu cesta</h1>

    {% if productos is empty %}
        <div class="alert alert-warning text-center">
            Tu cesta está vacía.
        </div>
    {% else %}
        
        {# 1. Inicializamos la variable total a 0 #}
        {% set total = 0 %}

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Producto</th>
                        <th scope="col" class="text-end">Precio Unitario</th>
                        <th scope="col" class="text-center">Unidades</th>
                        <th scope="col" class="text-end">Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    {% for codigo, producto in productos %}
                        
                        {# Calculamos el subtotal de esta fila #}
                        {% set subtotal = producto.getPrecio() * unidades[codigo] %}
                        
                        {# 2. Sumamos el subtotal al total acumulado #}
                        {% set total = total + subtotal %}

                        <tr>
                            <td>
                                <span class="fw-bold">{{ producto.getNombre() }}</span>
                            </td>
                            <td class="text-end">
                                {{ producto.getPrecio() }} €
                            </td>
                            <td class="text-center">
                                {{ unidades[codigo] }}
                            </td>
                            <td class="text-end">
                                {{ subtotal }} €
                            </td>
                            <td>
                                <form method="POST" action=""
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                
                {# 3. Pie de tabla con el Total Final #}
                <tfoot class="table-dark">
                    <tr>
                        <td colspan="3" class="text-end fw-bold">TOTAL A PAGAR:</td>
                        <td class="text-end fw-bold fs-5">{{ total }} €</td>
                    </tr>
                </tfoot>

            </table>
        </div>

        <div class="mt-4 d-flex justify-content-between align-items-center">
            
                Seguir comprando
            
            
            <button class="btn btn-success">
                Tramitar Pedido
            </button>
        </div>
    {% endif %}
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Cesta de la compra{% endblock %}

{% block contenido %}
<div class="container">
    <h1 class="mb-4 text-center">Tu cesta</h1>

    {% if productos is empty %}
        <div class="alert alert-warning text-center">
            Tu cesta está vacía.
        </div>
    {% else %}
        <div class="row g-4">

            {% for codigo, producto in productos %}
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0">

                        <div class="card-body text-center">
                            <h5 class="card-title">{{ producto.getNombre() }}</h5>

                            <p class="card-text">
                                <strong>Precio:</strong> {{ producto.getPrecio() }} € <br>
                                <strong>Unidades:</strong> {{ unidades[codigo] }}
                            </p>

                            <p class="card-text fw-bold">
                                Subtotal: {{ producto.getPrecio() * unidades[codigo] }} €
                            </p>
                        </div>

                    </div>
                </div>
            {% endfor %}

        </div>

        <div class="mt-4 text-center">
            <a href="{{ path('categorias') }}" class="btn btn-secondary">
                Seguir comprando
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
